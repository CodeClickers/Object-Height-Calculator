Screen:
    NavigationLayout:
        ScreenManager:
            id: screen_manager

            Screen:
                name: "mainscreen"

                FloatLayout:
                    Image:
                        source: "Assets/background.png"
                        allow_stretch: True
                        keep_ratio: False

                    Label:
                        text: "App by the Code Clickers"
                        font_size: "20sp"
                        pos_hint: {"center_x": .5, "center_y": .05}

                    BoxLayout:
                        size_hint: (.9, 1)
                        pos_hint: {"center_x": .5, "center_y": .85}
                        Image:
                            source: "Assets/logo.png"
                            size_hint: (.5, 1)
                            allow_stretch: True
                            keep_ratio: True

                        Label:
                            text: "Object Height Calculator"
                            font_size: "25sp"
                            halign: "center"
                            valign: "center"

                    BoxLayout:
                        padding: 0
                        spacing: "40sp"
                        orientation: "vertical"
                        size_hint: (.65, .6)
                        pos_hint: {'center_x': .5, "center_y": .4}

                        BoxLayout:
                            id: textbox
                            padding: 0
                            orientation: "vertical"
                            size_hint: (1, .6)
                            pos_hint: {'center_x': .5, "center_y": .5}

                            Label:
                                id: secondslabel
                                text: "0 seconds"
                                font_size: "30sp"

                            Label:
                                id: meterslabel
                                text: "0 meters"
                                font_size: "30sp"

                            Label:
                                id: feetlabel
                                text: "0 feet"
                                font_size: "30sp"

                        Button:
                            id: startstop
                            text: "Start"
                            font_size: "30sp"
                            size_hint_y: .3
                            background_normal: ''
                            background_color: 1, .3, 0, 1
                            on_release: app.startstop_counter()

                        Button:
                            text: "Reset"
                            font_size: "30sp"
                            size_hint_y: .3
                            background_normal: ''
                            background_color: 0, .5, 1, 1
                            on_release: app.reset_counter()

                        Button:
                            text: "How Does It Work?"
                            font_size: "30sp"
                            size_hint_y: .3
                            background_normal: ''
                            background_color: 1, .5, 1, 1
                            on_release:
                                screen_manager.current = "tutorialscreen"
                                app.changescreen()

            Screen:
                name: "tutorialscreen"

                FloatLayout:
                    Image:
                        source: "Assets/background.png"
                        allow_stretch: True
                        keep_ratio: False

                    Image:
                        source: "Assets/question-mark.png"
                        size_hint: (.3, .3)
                        pos_hint: {'center_x': .5, "center_y": .85}
                        allow_stretch: True
                        keep_ratio: True

                    Label:
                        text: "App by the Code Clickers"
                        font_size: "20sp"
                        pos_hint: {"center_x": .5, "center_y": .05}

                    BoxLayout:
                        padding: 0
                        spacing: "40sp"
                        orientation: "vertical"
                        size_hint: (.65, .6)
                        pos_hint: {'center_x': .5, "center_y": .4}


                        Label:
                            text: "How to use it?"
                            bold: True
                            halign: "center"
                            font_size: "40sp"

                        Label:
                            text: "1. Throw a small rock\nnear the object you want to measure"
                            bold: False
                            halign: "center"
                            font_size: "20sp"

                        Label:
                            text: "2. When the rock starts falling down\n click Start"
                            bold: False
                            halign: "center"
                            font_size: "20sp"

                        Label:
                            text: "3. When the rock falls down to the ground\n click Stop"
                            bold: False
                            halign: "center"
                            font_size: "20sp"

                        Label:
                            text: "4. You will obtain the approximate height\n of the object"
                            bold: False
                            halign: "center"
                            font_size: "20sp"

                        Label:
                            text: "How does it work?"
                            bold: True
                            halign: "center"
                            font_size: "40sp"

                        Label:
                            text: "Physics!"
                            bold: False
                            halign: "center"
                            font_size: "20sp"

                        Label:
                            text: "Using this formula:"
                            bold: False
                            halign: "center"
                            font_size: "20sp"

                        Label:
                            text: "16 x (seconds)Â² = feet"
                            bold: False
                            halign: "center"
                            font_size: "20sp"